        style="@style/BotoesPadrao"/>

    <Button
        android:id="@+id/btnToast"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Aperte"
        style="@style/BotoesPadrao"
        android:layout_gravity="center"/>


</LinearLayout>